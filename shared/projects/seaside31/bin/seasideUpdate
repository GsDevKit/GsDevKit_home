#! /bin/bash
#=========================================================================
# Copyright (c) 2015 GemTalk Systems, LLC <dhenrich@gemtalksystems.com>.
#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "              path: $0"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] <stone-name>

Update Seaside31 in the given stone by executing `project load Seaside3` 
using the \$GS_HOME/bin/todeIt script.

OPTIONS
  -h display help

EXAMPLES
  $(basename $0) -h
  $(basename $0) gs_329
"
HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi
source ${GS_HOME}/bin/defGsDevKit.env
if [ "${GS_SERVER}x" = "x" ] ; then
  echo "the GsDevKit_server project has not been installed correctly or the"
  echo "GS_SERVER environment variable has not been defined"
  exit 1
fi
source ${GS_HOME}/bin/defGsDevKit.env

source ${GS_HOME}/bin/private/shFunctions
getOpts_help $@

if [ $# -ne 1 ]; then
  usage; exit 1
fi
stoneName=$1

$GS_HOME/bin/startStone -b $stoneName

echo "Update Seaside31 on stone: $stoneName"

# install tODE using gsDevKitTodeCommandLine
$GS_HOME/bin/todeIt $stoneName "script --script=updateSeasideServer"

echo "...finished $(basename $0)"
