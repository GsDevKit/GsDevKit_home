#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "              path: $0"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] [-c https | ssh ] [-m client | server | both] [<stone-name> <gemstone-version> <client-name>]

OPTIONS
  -h
     display help
  -c https | ssh
     clone using https (https://github.com) or ssh (git@github.com)
     "ssh" is the default 
  -m client | server | both
     install as a client machine, a server machine or a client/server machine

EXAMPLES
   $(basename $0) -h
   $(basename $0) -m client tode
   $(basename $0) -c ssh -m server gs_329 3.2.9
   $(basename $0) -c https -m both gs_329 3.2.9 tode

HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi
source ${GS_HOME}/bin/defGsDevKit.env

modeArg=""
devKitType="both"
while getopts "hc:m:" OPT ; do
  case "$OPT" in
    h) usage; exit 0;;
    c) modeArg=" -c ${OPTARG} ";;
    m) devKitType="${OPTARG}" ;;
    *) echo "unknown option: ${OPTARG}"; usage; exit 1;;
  esac
done
shift $(($OPTIND - 1))

if [ "$devKitType" = "both" ] ; then
  if [ $# -ne 3 ]; then
    echo "missing arguments"; usage; exit 1
  fi
  stoneName=$1
  vers=$2
  clientName=$3
  $GS_HOME/bin/utils/cloneSharedTodeProjects $modeArg $devKitType
  $GS_HOME/bin/createStone $stoneName $vers
  $GS_HOME/bin/createClient $clientName
fi
if [ "$devKitType" = "client" ] ; then
  if [ $# -ne 1 ]; then
    echo "missing arguments"; usage; exit 1
  fi
  clientName=$1
  $GS_HOME/bin/utils/cloneSharedTodeProjects $modeArg $devKitType
  $GS_HOME/bin/createClient $clientName
fi
if [ "$devKitType" = "server" ] ; then
  if [ $# -ne 2 ]; then
    echo "missing arguments"; usage; exit 1
  fi
  stoneName=$1
  vers=$2
  $GS_HOME/bin/utils/cloneSharedTodeProjects $modeArg $devKitType
  $GS_HOME/bin/createStone $stoneName $vers
fi

echo "...finished $(basename $0)"
